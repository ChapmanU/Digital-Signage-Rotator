<article class="ui-slide ui-slide--schedule ui-slide--dark ui-slide--{{ index === i ? 'active' : lastIndex === i ? 'transition' : 'inactive' }} {{direction}}">
	<h1 class="ui-slide-heading">{{heading}}</h1>
	<subhead class="ui-slide-subheading">{{subheading}}</subhead>

	<div class="ui-slide-collection" on-pointerdown="delayAutoScroll" on-mousewheel="delayAutoScroll">
		<div class="ui-slide-collection-inset">
			{{#collection}}
			<article class="ui-event">
				<div class="ui-event-body">
					{{#image}}<img class="ui-event-image" src="{{image}}">{{/image}}

					<h1 class="ui-event-name">{{name}}</h1>

					<div class="ui-event-content">{{{content}}}</div>
				</div>

				<div class="ui-event-date-time-location">
					<p class="ui-event-date">{{date}}</p>
					<p class="ui-event-time">{{time}}</p>
					<p class="ui-event-location">{{location}}</p>
				</div>
				<p class="ui-event-admission">{{#admission}}<img class="ui-event-admission-icon" src="/digital-signage/_files/img/icon-ticket-white.svg"/>{{admission}}{{/admission}}</p>
				<p class="ui-event-audience">{{#audience}}<img class="ui-event-audience-icon" src="/digital-signage/_files/img/icon-audience-white.svg"/>{{audience}}{{/audience}}</p>
			</article>
			{{/collection}}
		</div>
	</div>

	<footer class="ui-slide-organizer"><img class="ui-slide-organizer-icon" src="/digital-signage/_files/img/icon-{{organizerId}}.svg"/> {{organizer}}</footer>
</article>